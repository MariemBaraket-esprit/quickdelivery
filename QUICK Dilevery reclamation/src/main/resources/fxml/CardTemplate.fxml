<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox  spacing="12" styleClass="reclamation-card" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ReclamationCardController">

    <!-- Header: Number + Status -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="numberLabel" styleClass="card-title" />
        <Label fx:id="statusLabel" styleClass="status-text" />
        <Region HBox.hgrow="ALWAYS" />
        <!-- you could add a 'View' button here if you wanted -->
    </HBox>

    <!-- Description -->
    <Label fx:id="descriptionLabel" styleClass="reclamation-card-text" wrapText="true" />

    <!-- Date + (optionally) action button -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="dateLabel" styleClass="date-text" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="editButton" minWidth="80" styleClass="button-secondary" text="Modifier" />
    </HBox>

    <padding>
        <Insets bottom="12" left="16" right="16" top="12" />
    </padding>
</VBox>
