<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane prefHeight="1164.0" prefWidth="453.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AjouterReclamationController">
    <content>
        <VBox alignment="CENTER" maxWidth="800" prefHeight="1087.0" prefWidth="390.0" spacing="15">
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>

            <!-- Back button -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button onAction="#handleBackToSupport" styleClass="button-back" text="Retour" />
            </HBox>

            <Label styleClass="form-title" text="Ajouter une Réclamation" />

            <!-- User info -->
            <VBox spacing="5" styleClass="form-group">
                <Label styleClass="form-label" text="Nom" />
                <TextField fx:id="nomField" editable="false" styleClass="text-field-custom" />
                <Label fx:id="nomError" styleClass="error-label" />
            </VBox>

            <VBox spacing="5" styleClass="form-group">
                <Label styleClass="form-label" text="Prénom" />
                <TextField fx:id="prenomField" editable="false" styleClass="text-field-custom" />
                <Label fx:id="prenomError" styleClass="error-label" />
            </VBox>

            <VBox spacing="5" styleClass="form-group">
                <Label styleClass="form-label" text="Email" />
                <TextField fx:id="emailField" editable="false" styleClass="text-field-custom" />
                <Label fx:id="emailError" styleClass="error-label" />
            </VBox>

            <VBox spacing="5" styleClass="form-group">
                <Label styleClass="form-label" text="Type de réclamation" />
                <HBox spacing="10" styleClass="form-group">
                    <ComboBox fx:id="typeReclamationComboBox" styleClass="combo-box-custom" />
                    <Label fx:id="typeError" styleClass="error-label" />
                </HBox>
            </VBox>

            <VBox spacing="5" styleClass="form-group">
                <Label styleClass="form-label" text="Description" />
                <TextArea fx:id="descriptionField" prefHeight="100" styleClass="text-area-custom" />
                <Label fx:id="descriptionError" styleClass="error-label" />
            </VBox>

            <!-- Actions -->
            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#handleBackToSupport" styleClass="button-secondary" text="Annuler" />
                <Button onAction="#handSaveReclamation" styleClass="button-primary" text="Enregistrer" />
            </HBox>
        </VBox>
    </content>
</ScrollPane> 