<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" styleClass="content" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ClientCommandesController">
    <children>
        <Label styleClass="title" text="Mes Commandes">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>

        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="toolbar">
            <children>
                <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#handleRefresh" styleClass="button button-refresh" text="Actualiser" />
            </children>
        </HBox>

        <TableView fx:id="commandesTable" VBox.vgrow="ALWAYS" styleClass="commandes-table">
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date" />
                <TableColumn fx:id="produitColumn" prefWidth="200.0" text="Produit" />
                <TableColumn fx:id="quantiteColumn" prefWidth="80.0" text="Quantité" />
                <TableColumn fx:id="totalColumn" prefWidth="100.0" text="Total" />
                <TableColumn fx:id="adresseColumn" prefWidth="150.0" text="Adresse" />
                <TableColumn fx:id="detailsColumn" prefWidth="150.0" text="Détails" />
                <TableColumn fx:id="actionsColumn" prefWidth="150.0" text="Actions" />
            </columns>
            <placeholder>
                <Label text="Aucune commande trouvée" />
            </placeholder>
        </TableView>

        <Label fx:id="statusLabel" styleClass="status-label" text="Total commandes: 0" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
