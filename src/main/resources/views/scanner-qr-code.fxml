<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.QRCodeScannerController"
            styleClass="qr-scanner-container" stylesheets="@../styles/client.css">
    <top>
        <VBox spacing="10" alignment="CENTER" styleClass="scanner-header">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Scanner un QR Code" styleClass="scanner-title"/>
            <Text text="Chargez une image contenant un QR Code pour accéder rapidement aux détails du produit"
                  styleClass="scanner-subtitle" wrappingWidth="400"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="scanner-content">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Zone de prévisualisation -->
            <StackPane styleClass="preview-container">
                <ImageView fx:id="previewImageView" fitWidth="350" fitHeight="350" preserveRatio="true"/>
                <Label fx:id="noImageLabel" text="Aucune image" styleClass="no-image-label"/>
            </StackPane>

            <!-- Zone de statut -->
            <HBox alignment="CENTER" spacing="10" styleClass="status-container">
                <ProgressIndicator fx:id="progressIndicator" visible="false"/>
                <Label fx:id="statusLabel" text="Prêt à scanner" styleClass="status-label"/>
            </HBox>

            <!-- Résultat du scan (visible uniquement après un scan réussi) -->
            <VBox fx:id="resultBox" spacing="10" styleClass="result-container" visible="false">
                <Label text="Résultat du scan" styleClass="result-title"/>
                <Separator/>
                <GridPane hgap="10" vgap="5">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="100"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Type:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="result-label"/>
                    <Label text="Produit" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="result-value"/>

                    <Label text="ID:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="result-label"/>
                    <Label fx:id="idLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="result-value"/>

                    <Label text="Nom:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="result-label"/>
                    <Label fx:id="nomLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="result-value"/>

                    <Label text="Catégorie:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="result-label"/>
                    <Label fx:id="categorieLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="result-value"/>

                    <Label text="Prix:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="result-label"/>
                    <Label fx:id="prixLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="result-value"/>

                    <Label text="Stock:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="result-label"/>
                    <Label fx:id="stockLabel" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="result-value"/>
                </GridPane>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" styleClass="scanner-actions">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="uploadButton" text="Charger une image" styleClass="upload-button" onAction="#handleUploadImage"/>
            <Button fx:id="scanButton" text="Scanner" styleClass="scan-button" onAction="#handleScan"/>
            <Button fx:id="cancelButton" text="Fermer" styleClass="cancel-button" onAction="#handleClose"/>
        </HBox>
    </bottom>
</BorderPane>