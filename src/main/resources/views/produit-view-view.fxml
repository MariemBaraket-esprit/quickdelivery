<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.controllers.ProduitViewController">
    <top>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-background-color: #4a90e2;" text="Liste des Produits" textFill="WHITE" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <padding>
                <Insets bottom="15.0" top="15.0" />
            </padding>
        </Label>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Rechercher:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtRecherche" prefHeight="30.0" prefWidth="300.0" promptText="Entrez un nom de produit..." />
                        <Button fx:id="btnRechercher" mnemonicParsing="false" onAction="#handleRechercher" prefHeight="30.0" style="-fx-background-color: #4a90e2;" text="Rechercher" textFill="WHITE" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <TableView fx:id="tableProduits" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colNom" prefWidth="150.0" text="Nom" />
                        <TableColumn fx:id="colDescription" prefWidth="200.0" text="Description" />
                        <TableColumn fx:id="colCategorie" prefWidth="100.0" text="Catégorie" />
                        <TableColumn fx:id="colPrix" prefWidth="75.0" text="Prix" />
                        <TableColumn fx:id="colStock" prefWidth="75.0" text="Stock" />
                        <TableColumn fx:id="colDateAjout" prefWidth="100.0" text="Date d'ajout" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </TableView>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="btnAjouter" mnemonicParsing="false" onAction="#handleAjouter" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #4CAF50;" text="Ajouter" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnModifier" mnemonicParsing="false" onAction="#handleModifier" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #FFC107;" text="Modifier" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnSupprimer" mnemonicParsing="false" onAction="#handleSupprimer" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #F44336;" text="Supprimer" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnRafraichir" mnemonicParsing="false" onAction="#handleRafraichir" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #2196F3;" text="Rafraîchir" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>