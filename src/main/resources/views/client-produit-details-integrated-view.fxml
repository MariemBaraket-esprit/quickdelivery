<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.SVGPath?>

<VBox spacing="20" styleClass="product-details-container" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.ClientProduitDetailsController"
      prefWidth="800" prefHeight="600">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- En-tête avec bouton de retour -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button fx:id="btnRetour" text="Retour aux produits" onAction="#handleClose"
                styleClass="back-button"/>
        <Label text="Détails du Produit" styleClass="section-title">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
    </HBox>

    <!-- Contenu principal -->
    <HBox spacing="30" VBox.vgrow="ALWAYS">
        <!-- Informations du produit -->
        <VBox spacing="15" styleClass="product-info" HBox.hgrow="ALWAYS" maxWidth="500">
            <Label fx:id="lblNomProduit" styleClass="product-title">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>

            <HBox spacing="10">
                <Label fx:id="lblCategorie" styleClass="category-badge"/>
            </HBox>

            <Label text="Description:" styleClass="info-label">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Label>
            <Label fx:id="lblDescription" styleClass="description-text" wrapText="true"/>

            <GridPane hgap="15" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="100" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Prix:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="info-label"/>
                <Label fx:id="lblPrix" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="price-value"/>

                <Label text="Taille:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="info-label"/>
                <Label fx:id="lblTaille" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Stock:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="info-label"/>
                <Label fx:id="lblStock" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Date d'ajout:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="info-label"/>
                <Label fx:id="lblDateAjout" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Boutons QR Code -->
            <HBox spacing="10" styleClass="qr-code-buttons">
                <Button fx:id="btnQRCode" styleClass="qr-code-button" onAction="#handleGenerateQRCode">
                    <graphic>
                        <HBox spacing="5" alignment="CENTER">
                            <SVGPath content="M3,3V21H21V3H3M5,5H19V19H5V5M7,7V9H9V7H7M11,7V9H13V7H11M15,7V9H17V7H15M7,11V13H9V11H7M11,11V13H13V11H11M15,11V13H17V11H15M7,15V17H9V15H7M11,15V17H13V15H11M15,15V17H17V15H15Z"
                                     styleClass="qr-code-icon"/>
                            <Label text="Générer QR Code" styleClass="qr-code-text"/>
                        </HBox>
                    </graphic>
                </Button>


            </HBox>
        </VBox>

        <!-- Panneau de commande -->
        <VBox spacing="15" styleClass="order-panel" alignment="TOP_CENTER" minWidth="250">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Commander" styleClass="order-title">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>

            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Quantité:" styleClass="info-label"/>
                <Spinner fx:id="spinnerQuantite" editable="true" styleClass="quantity-spinner"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <Button fx:id="btnCommander" text="Commander" onAction="#handleCommander"
                    styleClass="order-button" maxWidth="Infinity"/>
        </VBox>
    </HBox>
</VBox>