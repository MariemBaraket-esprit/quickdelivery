<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" styleClass="content" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.CommandeController">

    <Label styleClass="title" text="Gestion des Commandes" />

    <HBox styleClass="toolbar">
        <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#handleRefresh"
                styleClass="button button-refresh" text="Actualiser" />
        <TextField fx:id="searchField" promptText="Rechercher..." styleClass="search-field" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin>
        </TextField>
        <Button mnemonicParsing="false" onAction="#handleSearch" styleClass="button button-search" text="Rechercher" />
    </HBox>

    <TableView fx:id="commandesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="100" />
            <TableColumn fx:id="clientColumn" text="Client" prefWidth="150" />
            <TableColumn fx:id="produitColumn" text="Produit" prefWidth="150" />
            <TableColumn fx:id="quantiteColumn" text="QuantitÃ©" prefWidth="80" />
            <TableColumn fx:id="totalColumn" text="Total" prefWidth="100" />
            <TableColumn fx:id="adresseColumn" text="Adresse" prefWidth="200" />
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <Label fx:id="statusLabel" styleClass="status-label" text="Total commandes: 0" />
</VBox>