<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" styleClass="content" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CommandeController">
    <children>
        <Label styleClass="title" text="Gestion des Commandes" />
        <HBox styleClass="toolbar">
            <children>
                <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#handleRefresh" styleClass="button button-refresh" text="Actualiser" />
                <Button fx:id="btnStatistiques" mnemonicParsing="false" onAction="#handleStatistiques" styleClass="button button-stats" text="Statistiques" />
                <TextField fx:id="searchField" promptText="Rechercher..." styleClass="search-field" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </TextField>
                <Button mnemonicParsing="false" onAction="#handleSearch" styleClass="button button-search" text="Rechercher" />
            </children>
        </HBox>
        <ListView fx:id="commandesListView" styleClass="commandes-list-view" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </ListView>
        <Label fx:id="statusLabel" styleClass="status-label" text="Total commandes: 0" />
    </children>
</VBox>
